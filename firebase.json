{
  "hosting": [
    {
      "site": "nxtai-25-07",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/contact",
          "function": "api-contact"
        }
      ]
    },
    {
      "site": "nxtai-25-07-web",
      "source": "packages/web",
      "frameworksBackend": {}
    },
    {
      "site": "nxtai-25-07-marketing",
      "source": "packages/marketing",
      "rewrites": [
        {
          "source": "/api/contact",
          "function": "api-contact"
        }
      ],
      "frameworksBackend": {}
    }
  ],
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "predeploy": [
        "npm --prefix functions install"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
