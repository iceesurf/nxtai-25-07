{
  "hosting": [
    {
      "target": "marketing",
      "public": "public",
      "rewrites": [
        {
          "source": "/api/contact",
          "function": "api-contact"
        }
      ]
    },
    {
      "target": "app",
      "public": "packages/web/dist",
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],  
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"packages/functions\" install",
        "npm --prefix \"packages/functions\" run build"
      ]
    }   
  ],
  "firestore": {
    "database": "(default)",
    "location": "us-central1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "apphosting": {
    "backendId": "nxtai-25-07",
    "rootDir": "/",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ]
  }
}
